<build>
  <plugins>
    <plugin>
      <groupId>thorntail.io</groupId>
      <artifactId>thorntail-maven-plugin</artifactId>
      <executions>
        <execution>
          <id>multistart</id>
          <phase>pre-integration-test</phase>
          <goals>
            <goal>multistart</goal>
          </goals>
          <configuration>
            <processes>
              <process>
                <artifactId>my-frontend-app</artifactId>
              </process>
              <process>
                <artifactId>my-auth-app</artifactId>
                <properties>
                  <thorntail.http.port>8081</thorntail.http.port>
                </properties>
                <mainClass>com.example.auth.Main</mainClass>
              </process>
              <process>
                <artifactId>my-indexing-app</artifactId>
                <properties>
                  <thorntail.http.port>8082</thorntail.http.port>
                </properties>
                <environment>
                  <ENV>test</ENV>
                </environment>
              </process>
            </processes>
          </configuration>
        </execution>
      </executions>
    </plugin>
  </plugins>
</build>
